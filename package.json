{
  "name": "lasagna",
  "version": "1.0.0",
  "description": "Task planning and activity logging",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-public": "cp -r ./dist ./public/js",
    "build": "webpack && npm run update-public",
    "watch-update-public": "watch --patern \"./dist/**/*.js\" --command \"npm run update-public\"",
    "watch-build": "webpack --watch",
    "serve": "firebase serve",
    "deploy": "firebase deploy",
    "watch": "multiview [npm run watch-build] [npm run watch-update-public] [npm run serve]"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DigitalMugen/lasagna.git"
  },
  "author": "Bill Robitske, Jr. <bill.robitske.jr@gmail.com> (https://github.com/BillRobitskeJr)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DigitalMugen/lasagna/issues"
  },
  "homepage": "https://github.com/DigitalMugen/lasagna#readme",
  "devDependencies": {
    "awesome-typescript-loader": "^3.1.2",
    "multiview": "^2.5.1",
    "source-map-loader": "^0.2.0",
    "typescript": "^2.2.1",
    "watch-cli": "^0.2.1",
    "webpack": "^2.2.1"
  }
}
